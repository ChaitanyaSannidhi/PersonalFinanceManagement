<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="/css/styles.css"> <!-- Link to your external CSS file -->
</head>
<body>
    <div class="container">
        <div class="form login">
            <header>Login</header>
            <form action="/login" method="POST" onsubmit="return validateLogin()">
                <div class="field">
                    <input type="email" id="email" name="email" placeholder="Email" required>
                </div>
                <div class="field">
                    <input type="password" id="password" name="password" placeholder="Password" required>
                </div>
                <!-- Display error message if login fails -->
              
                <div id="error-message" class="error"></div> <!-- Client-side error message -->
                <div class="field">
                    <button type="submit">Login</button>
                </div>
                <div class="form-link">
                    <span>Don't have an account? <a href="/signup">Signup</a></span>
                </div>
            </form>
        </div>
    </div>
    <script>
        function validateLogin() {
            const email = document.getElementById('email').value;
            const password = document.getElementById('password').value;
            const errorMessage = document.getElementById('error-message');

            if (!email || !password) {
                errorMessage.innerText = "Please fill out all fields.";
                return false;
            }
            return true;
        }
    </script>
</body>
</html>
